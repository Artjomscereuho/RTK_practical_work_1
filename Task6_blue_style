  <footer>¬© 2025 ƒídienu Pas≈´tƒ´≈°anas Sistƒìma</footer>

<script>
    const VAT = 0.21;

    const foods = [
      {
        id: 1,
        name: "Cepta vista",
        description: "Gar≈°ƒ´ga vista ar krauk≈°ƒ∑ƒ´gu garozi≈Üu un gardiem kartupeƒºiem.",
        ingredients: "Vista, kartupeƒºi, sƒÅls, pipari, ƒ∑iploki, rozmarƒ´ns",
        image: "https://i.imgur.com/lNR1MPx.jpg",
        sizes: { Mazs: 5.00, Vidƒìjs: 6.50, Liels: 8.00 }
      },
      {
        id: 2,
        name: "Zivju fileja",
        description: "Svaiga fileja ar citronu un dilles mƒìrcƒ´ti, cepta uz pannas.",
        ingredients: "Zivju fileja, citronu mƒìrce, dilles, sƒÅls, pipari",
        image: "https://i.imgur.com/XOsOwiZ.jpg",
        sizes: { Mazs: 6.00, Vidƒìjs: 7.50, Liels: 9.00 }
      },
      {
        id: 3,
        name: "Veƒ£etƒÅrs salƒÅti",
        description: "Svaigi dƒÅrze≈Üi ar olƒ´veƒºƒºu un balsamiko mƒìrci.",
        ingredients: "SalƒÅti, tomƒÅti, gurƒ∑i, paprika, olƒ´veƒºƒºa, balsamiko",
        image: "https://i.imgur.com/7UtrF8H.jpg",
        sizes: { Mazs: 4.50, Vidƒìjs: 5.50, Liels: 6.50 }
      },
      {
        id: 4,
        name: "Siers ar maizi",
        description: "Klasisks siers ar svaigu maizi un sviestu.",
        ingredients: "Siers, maize, sviests",
        image: "https://i.imgur.com/6c6c6c6.jpg",
        sizes: { Mazs: 3.00, Vidƒìjs: 4.00, Liels: 5.00 }
      }
    ];

    const cart = [];

    function formatPrice(price) {
      return "‚Ç¨" + price.toFixed(2);
    }

    function renderFoods() {
      const container = document.getElementById("food-container");
      container.innerHTML = "";

      foods.forEach(food => {
        const div = document.createElement("div");
        div.className = "food-item";

        const sizeOptions = Object.entries(food.sizes).map(
          ([size, price]) =>
            `<option value="${size}">${size} - ${formatPrice(price)} (bez PVN), ${formatPrice(price * (1 + VAT))} (ar PVN)</option>`
        ).join("");

        div.innerHTML = `
          <img src="${food.image}" alt="${food.name}" loading="lazy" />
          <div class="food-info">
            <h4>${food.name}</h4>
            <p class="description">${food.description}</p>
            <p class="ingredients"><strong>SastƒÅvdaƒºas:</strong> ${food.ingredients}</p>
            <label>Izmƒìrs:
              <select data-id="${food.id}" class="size-select" aria-label="Izvƒìlies izmƒìru priek≈° ${food.name}">
                ${sizeOptions}
              </select>
            </label>
            <label>Daudzums:
              <input type="number" min="1" value="1" data-id="${food.id}" class="qty-input" aria-label="Daudzums priek≈° ${food.name}" />
            </label>
            <button type="button" onclick="addToCart(${food.id})" aria-label="Pievienot ${food.name} grozam">Pievienot grozam</button>
          </div>
        `;
        container.appendChild(div);
      });
    }

    function addToCart(id) {
      const sizeSelect = document.querySelector(`.size-select[data-id="${id}"]`);
      const qtyInput = document.querySelector(`.qty-input[data-id="${id}"]`);
      const size = sizeSelect.value;
      const qty = parseInt(qtyInput.value);

      if (qty <= 0 || isNaN(qty)) {
        alert("L≈´dzu ievadiet derƒ´gu daudzumu.");
        return;
      }

      const existing = cart.find(item => item.id === id && item.size === size);
      if (existing) {
        existing.qty += qty;
      } else {
        cart.push({ id, size, qty });
      }
      document.getElementById("cart-btn").style.display = "block";
      alert("Prece pievienota grozam!");
    }

    function renderCart() {
      const list = document.getElementById("cart-list");
      const totalDisplay = document.getElementById("cart-total");
      list.innerHTML = "";
      let totalNet = 0;
      let totalVAT = 0;

      if(cart.length === 0) {
        list.innerHTML = "<li>Grozs ir tuk≈°s.</li>";
        totalDisplay.textContent = "";
        return;
      }

      cart.forEach((item, idx) => {
        const food = foods.find(f => f.id === item.id);
        const priceNet = food.sizes[item.size];
        const qty = item.qty;
        const lineNet = priceNet * qty;
        const lineVAT = lineNet * VAT;
        const lineTotal = lineNet + lineVAT;
        totalNet += lineNet;
        totalVAT += lineVAT;

        const li = document.createElement("li");
        li.innerHTML = `
          <div>${food.name} (${item.size}) √ó ${qty}</div>
          <div>
            Bez PVN: <strong>${formatPrice(lineNet)}</strong><br>
            PVN (21%): <strong>${formatPrice(lineVAT)}</strong><br>
            KopƒÅ: <strong>${formatPrice(lineTotal)}</strong>
          </div>
          <button onclick="removeFromCart(${idx})" aria-label="Iz≈Üemt ≈°o ƒìdienu">üóëÔ∏è</button>
        `;
        list.appendChild(li);
      });

      totalDisplay.innerHTML = `
        <strong>KopƒìjƒÅ summa bez PVN:</strong> ${formatPrice(totalNet)}<br>
        <strong>Kopƒìjais PVN (21%):</strong> ${formatPrice(totalVAT)}<br>
        <strong>KopƒÅ ar PVN:</strong> ${formatPrice(totalNet + totalVAT)}
      `;
    }

    function removeFromCart(index) {
      cart.splice(index, 1);
      renderCart();
      if (cart.length === 0) {
        document.getElementById("cart-btn").style.display = "none";
      }
    }

    document.getElementById("cart-btn").addEventListener("click", () => {
      renderCart();
      const cartSection = document.getElementById("cart-section");
      cartSection.style.display = "block";
      document.getElementById("order-form").style.display = "none";
      cartSection.scrollIntoView({ behavior: "smooth" });
    });

    document.getElementById("checkout-btn").addEventListener("click", () => {
      if(cart.length === 0) {
        alert("Grozs ir tuk≈°s, l≈´dzu pievienojiet preces.");
        return;
      }
      document.getElementById("order-form").style.display = "block";
      document.getElementById("cart-section").style.display = "none";
      document.getElementById("order-form").scrollIntoView({ behavior: "smooth" });
    });

    document.getElementById("submit-form").addEventListener("submit", (e) => {
      e.preventDefault();
      if(cart.length === 0) {
        alert("Grozs ir tuk≈°s, nevar apstiprinƒÅt pas≈´tƒ´jumu.");
        return;
      }
      const name = e.target.name.value.trim();
      const phone = e.target.phone.value.trim();
      const address = e.target.address.value.trim();

      if(!name || !phone || !address){
        alert("L≈´dzu aizpildiet visus laukus.");
        return;
      }

      alert(`Paldies, ${name}! J≈´su pas≈´tƒ´jums ir sa≈Üemts.\nMƒìs ar jums sazinƒÅsimies uz telefonu ${phone}.`);
      e.target.reset();
      cart.length = 0;
      document.getElementById("order-form").style.display = "none";
      document.getElementById("cart-btn").style.display = "none";
    });

    const themeToggleBtn = document.getElementById("themeToggleBtn");
    themeToggleBtn.addEventListener("click", () => {
      const body = document.body;
      if (body.classList.contains("light")) {
        body.classList.remove("light");
        body.classList.add("dark");
        themeToggleBtn.textContent = "Gai≈°ƒÅ tƒìma";
      } else {
        body.classList.remove("dark");
        body.classList.add("light");
        themeToggleBtn.textContent = "Tum≈°ƒÅ tƒìma";
      }
    });

    renderFoods();
  </script>
</body>
