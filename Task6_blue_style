  <button class="theme-toggle" id="themeToggleBtn" aria-label="PƒÅrslƒìgt tƒìmu">Tum≈°ƒÅ tƒìma</button>
  <header>ƒídienu Pas≈´tƒ´jums</header>

  <main>
    <div id="food-container"></div>
    <button id="cart-btn" aria-label="Atvƒìrt grozu">Atvƒìrt grozu</button>

    <section id="cart-section" aria-label="Grozs">
      <h3>Grozs</h3>
      <ul id="cart-list"></ul>
      <p id="cart-total"></p>
      <button id="checkout-btn">Pabeigt pas≈´tƒ´jumu</button>
    </section>

    <section id="order-form" aria-label="Pas≈´tƒ´juma forma">
      <h3>PiegƒÅdes informƒÅcija</h3>
      <form id="submit-form">
        <label for="name">VƒÅrds un uzvƒÅrds:
          <input id="name" type="text" name="name" required autocomplete="name" />
        </label>
        <label for="phone">Telefons:
          <input id="phone" type="tel" name="phone" required autocomplete="tel" />
        </label>
        <label for="address">Adrese:
          <input id="address" type="text" name="address" required autocomplete="street-address" />
        </label>
        <button type="submit">ApstiprinƒÅt pas≈´tƒ´jumu</button>
      </form>
